<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ola_Mundo.MainPage">

    <StackLayout>

        <BoxView BackgroundColor="Transparent"/>

        <Label Text="INÍCIO" TextColor="DeepPink" FontSize="Title" HorizontalOptions="CenterAndExpand" FontAttributes="Bold"/>

        <BoxView BackgroundColor="Transparent"/>
        
        <Entry x:Name="TXTName" Keyboard="Text" ReturnType="Default" />

        <BoxView BackgroundColor="Transparent"/>

        <Button Text="Enviar" x:Name="BTNText" Clicked="BTNText_Clicked"
            BackgroundColor="LightCoral" BorderColor="LightBlue" BorderWidth="3" CornerRadius="15" HorizontalOptions="Center" />
        
        
    </StackLayout>

</ContentPage>
